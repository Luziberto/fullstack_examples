<script src='/jquery-3.3.1.min.js' ></script>
<script src='/socket.io.js' ></script>
<button onclick="enviarMensagem()">Clique</button>
<script>
var socket;
function abrirConexao() {
   socket = io.connect("http://localhost:3000");
}
function enviarMensagem() { 
  socket.emit("enviarMensagem");
  listarMensagem()
}
function listarMensagem() {    
    socket.emit("listarMensagem", function (data) {    
        var html = ''    
        for (let i in data)
            html += data[i].conteudo + '\n'
        $('#lista').html(html)
    })    
}
abrirConexao()
</script>
<div id="lista"></div>